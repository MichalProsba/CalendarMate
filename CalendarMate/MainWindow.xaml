<Window x:Class="CalendarMate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalendarMate"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="CalendarMate" ResizeMode="NoResize" Height="800" Width="1200">
    <!--"Maximized"-->
    <Grid x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" Grid.Row="0" Text="Monday" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Grid.Column="2" Grid.Row="0" Text="Tuesday"       VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Grid.Column="3" Grid.Row="0" Text="Wednesday"        VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Grid.Column="4" Grid.Row="0" Text="Thursday"     VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Grid.Column="5" Grid.Row="0" Text="Friday"       VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Grid.Column="6" Grid.Row="0" Text="Saturday"       VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Grid.Column="7" Grid.Row="0" Text="Sunday"    VerticalAlignment="Center" HorizontalAlignment="Center"/>
        




        <Calendar x:Name="Calendar" Grid.RowSpan="5" Margin="0,54,0,67" HorizontalAlignment="Center"/>
        <Button Content="Back" Grid.Column="8" HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" Width="80"/>
        <Button Content="Next" Grid.Column="10" HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" Width="80"/>
        <TextBlock x:Name="B1" Grid.Column="0" Grid.Row="0" />
    </Grid>
</Window>
