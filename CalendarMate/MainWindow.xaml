<Window x:Class="CalendarMate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalendarMate"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        Background="MidnightBlue"
        Title="CalendarMate" ResizeMode="NoResize" Height="800" Width="1200">
    <Grid x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="10" Background="DarkBlue">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="24*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Foreground="White" Margin="10,5" Grid.Row="0" Grid.Column="0" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" Text="Calendar"/>
            <Button Foreground="White" Background="DarkBlue" Width="50" Height="30" BorderThickness="0" Click="CloseMainWindow_Click" Grid.Row="0" Grid.Column="9" FontSize="16" HorizontalAlignment="Right" VerticalAlignment="Top" Content="X"/>
        </Grid>


        <TextBlock Foreground="White"  FontSize="18" Grid.Column="1" Grid.Row="2" Text="Monday" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Foreground="White"  FontSize="18" Grid.Column="2" Grid.Row="2" Text="Tuesday"       VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Foreground="White"  FontSize="18" Grid.Column="3" Grid.Row="2" Text="Wednesday"        VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Foreground="White"  FontSize="18" Grid.Column="4" Grid.Row="2" Text="Thursday"     VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Foreground="White"  FontSize="18" Grid.Column="5" Grid.Row="2" Text="Friday"       VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Foreground="White"  FontSize="18" Grid.Column="6" Grid.Row="2" Text="Saturday"       VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Foreground="White"  FontSize="18" Grid.Column="7" Grid.Row="2" Text="Sunday"    VerticalAlignment="Center" HorizontalAlignment="Center"/>


                
        <Calendar x:Name="Calendar" Grid.Row="3" Grid.RowSpan="5" Margin="0,54,0,67" HorizontalAlignment="Center"/>
        <Button Width="50" Height="60" BorderThickness="0" FontSize="30" Foreground="White" Background="MidnightBlue" x:Name="Back" Click="Back_Click" Content="&lt;" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center"/>
        <Button Width="50" Height="60" BorderThickness="0" FontSize="30" Foreground="White" Background="MidnightBlue" x:Name="Next" Click="Next_Click" Content="&gt;" Grid.Column="7" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button BorderThickness="0" FontSize="30"  Foreground="White" Background="MidnightBlue" x:Name="Clock" Click="CurrentDate_Click" Grid.Column="0" Grid.Row="1" />
        <TextBlock Foreground="White" x:Name="Month_And_Year_TextBlock" FontSize="30" Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="5" Text="None" HorizontalAlignment="Center" VerticalAlignment="Center"/>
     </Grid>
</Window>
