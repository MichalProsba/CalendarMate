<Window x:Class="CalendarMate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalendarMate"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        Background="#666"
        Title="CalendarMate" ResizeMode="NoResize" Height="1100" Width="1200">
    <StackPanel>
        <StackPanel  Background="#333">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Foreground="White" Margin="2,0" Grid.Row="0" Grid.Column="0" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" Text="Calendar"/>
                <Button x:Name="Close" Foreground="White" Background="#333" Width="50"  BorderThickness="0" Click="CloseMainWindow_Click" Grid.Row="0" Grid.Column="3" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Top" Content="X"/>
            </Grid>
        </StackPanel>

        <Border Padding="20">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <Button BorderThickness="0" FontSize="30"  Foreground="White" Background="#666" x:Name="Clock" Click="CurrentDate_Click" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.RowSpan="2"/>
                        <Button BorderThickness="0" FontSize="30"  Foreground="White" Background="#666" x:Name="Weather" Click="Weather_Click" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Viewbox Grid.Row="1" Grid.RowSpan="3" Height="280" Width="280" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Calendar x:Name="Calendar2" MouseRightButtonUp="Calendar_MouseRightButtonUp" MouseLeftButtonUp="Calendar_MouseLeftButtonUp" />
                        </Viewbox>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="5*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Width="50" Height="60" BorderThickness="0" FontSize="30" Foreground="White" Background="#666" x:Name="Back" Click="Back_Click" Content="&lt;" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Button Width="50" Height="60" BorderThickness="0" FontSize="30" Foreground="White" Background="#666" x:Name="Next" Click="Next_Click" Content="&gt;" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock Foreground="White" x:Name="Month_And_Year_TextBlock" FontSize="30" Grid.Column="1" Text="None" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>

                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Foreground="White"  FontSize="18" Grid.Column="0" Text="Monday" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Foreground="White"  FontSize="18" Grid.Column="1" Text="Tuesday"       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Foreground="White"  FontSize="18" Grid.Column="2" Text="Wednesday"        VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Foreground="White"  FontSize="18" Grid.Column="3" Text="Thursday"     VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Foreground="White"  FontSize="18" Grid.Column="4" Text="Friday"       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Foreground="White"  FontSize="18" Grid.Column="5" Text="Saturday"       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Foreground="White"  FontSize="18" Grid.Column="6" Text="Sunday"    VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                        </StackPanel>

                        <StackPanel>
                            <Grid x:Name="mainGrid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                            </Grid>
                        </StackPanel>

                    </StackPanel>

                </Grid>
            </StackPanel>
        </Border>

    </StackPanel>
</Window>
