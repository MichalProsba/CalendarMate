                                    <fa:FontAwesome Text="Month" FontSize="30"/>
                                </StackPanel>
                                <TextBox x:Name="EventMonthShow" Text="04" Padding="5" FontSize="25" Background="#eee" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus">
