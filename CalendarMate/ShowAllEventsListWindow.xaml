                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="CornerRadius" Value="3"/>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>
                            </StackPanel>
                        </Grid>

                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Grid.Column="1">
